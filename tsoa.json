{
    "entryFile": "src/app.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": [
        "src/**/*-controller.ts"
    ],
    "spec": {
        "outputDirectory": "build",
        "specVersion": 3,
        "spec": {
            "paths": {
                "/detection": {
                    "post": {
                        "consumes": [
                            "multipart/form-data"
                        ],
                        "parameters": [
                            {
                                "in": "formData",
                                "name": "detect-image",
                                "required": true,
                                "type": "file"
                            }
                        ]
                    }
                }
            }
        },
        "securityDefinitions": {
            "jwt": {
                "type": "apiKey",
                "in": "header",
                "name": "x-access-token"
            }
        }
    },
    "routes": {
        "routesDir": "build",
        "authenticationModule": "./src/auth/authentication.ts"
    }
}